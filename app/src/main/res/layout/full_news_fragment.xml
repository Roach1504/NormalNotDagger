<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Название"
                android:inputType="textPersonName"
                android:textColor="@color/textHead"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/shorts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Краткое описание"
                android:inputType="textPersonName"
                android:textColor="@color/textSubtitle"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@+id/shorts"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_weight="9.41"
                android:ems="10"

                android:hint="Текст"
                android:inputType="textMultiLine" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/gallery_imag1"
                    android:src="@drawable/ic_image_amber_500_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/addimag"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/gallery_imag2"
                    android:src="@drawable/ic_image_amber_500_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/addimag"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/gallery_imag3"
                    android:src="@drawable/ic_image_amber_500_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/addimag"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>